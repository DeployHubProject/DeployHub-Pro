<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
	<!--
	This jelly script is used for per-project configuration.

	See global.jelly for a general discussion about jelly script.
	-->
	<!-- global fields -->
	<f:section title="Credentials">
	<f:entry title="Username" field="username">
		<f:textbox />
	</f:entry>
	<f:entry title="Password" field="password">
		<f:password />
	</f:entry>
	</f:section>
	<!-- ************************************************************* -->
	<f:section title="Deploy Application">
	<f:block>
	<table>
		<f:optionalBlock	name="deployApplication"
					title="Deploy Application"
					checked="${instance.deployApplication}"
					help="/plugin/release_engineer/help-deployapp.html">
			<f:entry title="Target Environment" field="environment">
				<f:textbox />
			</f:entry>
			<f:entry title="Application" field="application">
				<f:textbox />
			</f:entry>
			<f:entry title="Wait for Deployment to Complete" field="wait">
				<f:checkbox />
			</f:entry>
			<f:section title="Advanced Application Selection Options">
			<f:block>
			<table>
				<f:optionalBlock	name="useAdvanced"
							title="Use Advanced Version Selection"
							checked="${instance.useAdvanced}"
							help="/plugin/release_engineer/help-ua.html">
					<f:optionalBlock	name="findLatestVersion"
								title="Find Latest Version"
								checked="${instance.findLatestVersion}"
								help="/plugin/release_engineer/help-flv.html">
						<f:entry title="Branch Name" field="branchName">
							<f:textbox />
						</f:entry>
						<f:optionalBlock	name="createNewVersion"
									title="If Latest Version is approved, create a new version"
									checked="${instance.createNewVersion}"
									help="/plugin/release_engineer/help-cnv.html">
							<f:entry title="Create Version Task Name" field="taskname">
								<f:textbox />
							</f:entry>
						</f:optionalBlock>
					</f:optionalBlock>
				</f:optionalBlock>
			</table>
			</f:block>
			</f:section>
			<f:section title="Set Application Attributes">
			<f:block>
			<f:repeatable var="a" field="appatts" add="Add Attribute">
			<table>
				<f:entry title="Attribute Name" field="name">
					<f:textbox />
				</f:entry>
				<f:entry title="Attribute Value" field="value">
					<f:textbox />
				</f:entry>
				<f:entry title="">
					<div align="right">
						<f:repeatableDeleteButton value="Delete this Attribute"/>
					</div>
				</f:entry>
			</table>
			</f:repeatable>
			</f:block>
			</f:section>
		</f:optionalBlock>
	</table>
	</f:block>
	</f:section>
	<!-- ************************************************************* -->
	<f:section title="Component Selection">
	<f:block>
	<table>
		<f:optionalBlock	name="useComponent"
					title="Component Selection"
					checked="${instance.useComponent}"
					help="/plugin/release_engineer/help-uc.html">
			<f:entry title="Component Name" field="componentName" help="/plugin/release_engineer/help-cn.html">
				<f:textbox />
			</f:entry>
			<f:optionalBlock	name="createNewComponent"
						title="If component is associated with an Approved Application, create new Component Version"
						checked="${instance.createNewComponent}"
						help="/plugin/release_engineer/help-cncv.html">
				<f:entry title="Branch Name" field="componentBranchName" help="/plugin/release_engineer/help-cbn.html">
					<f:textbox />
				</f:entry>
			</f:optionalBlock>
			<f:section title="Set Component Attributes">
			<f:block>
				<f:repeatable var="c" field="compatts" add="Add Attribute">
				<table>
				<f:entry title="Attribute Name" field="cname">
					<f:textbox />
				</f:entry>
				<f:entry title="Attribute Value" field="cvalue">
					<f:textbox />
				</f:entry>
				<f:entry title="">
					<div align="right">
						<f:repeatableDeleteButton value="Delete this Attribute" />
					</div>
				</f:entry>
				</table>
				</f:repeatable>
			</f:block>
			</f:section>
		</f:optionalBlock>
	</table>
	</f:block>
	</f:section>
	<!-- ************************************************************* -->
</j:jelly>


